{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run server",
      "type": "shell",
      "command": "iex -S mix phx.server",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test File",
      "type": "shell",
      "command": "mix test ${file}",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Test All",
      "type": "shell",
      "command": "mix test",
      "group": "test"
    },
    {
      "label": "Migrate db",
      "type": "shell",
      "command": "mix ecto.migrate",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
  ]
}
